# applications 
alt - return : /Applications/Alacritty.app/Contents/MacOS/alacritty
alt - s : /Applications/Safari.app/Contents/MacOS/safari

# close 
shift + alt - c : yabai -m window --close

# change focus
alt - j : yabai -m window --focus prev 
alt - k : yabai -m window --focus next 

# move focused window to next/prev workspace
alt + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1 
alt + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2 
alt + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3 

# move focused window to next/prev monitor 
alt - o : yabai -m window --display recent; yabai -m display --focus next

# destroy workspace 
shift + alt - d : yabai -m space --destroy

# create workspace and focus it
shift + alt - n : yabai -m space --create

# focus workspace 
alt - 1 : yabai -m space --focus 1 
alt - 2 : yabai -m space --focus 2 
alt - 3 : yabai -m space --focus 3 
alt - 4 : yabai -m space --focus 4 
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6

 # focus monitor
lctrl + alt - j  : yabai -m display --focus prev
lctrl + alt - k  : yabai -m display --focus next

# balance size of windows 
shift + alt - 0 : yabai -m space --balance

# change layout
## Moving windows
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

# Resize windows
alt - h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
alt - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# switch from column split to horizontal split 
alt - space : yabai -m window --toggle zoom-fullscreen 
